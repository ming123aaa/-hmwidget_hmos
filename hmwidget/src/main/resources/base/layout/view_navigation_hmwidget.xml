<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:alignment="center">

    <Component
        ohos:id="$+id:space_navigation_top"
        ohos:height="0"
        ohos:width="0"/>
    <Image
        ohos:id="$+id:img_navigation"
        ohos:height="100"
        ohos:width="100"
        ohos:scale_mode="stretch"/>

    <Component
        ohos:id="$+id:space_navigation"
        ohos:height="0"
        ohos:width="0"/>

    <Text
        ohos:id="$+id:txt_navigation"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text_alignment="center"
        />
    <Component
        ohos:id="$+id:space_navigation_bottom"
        ohos:height="0"
        ohos:width="0"/>
</DirectionalLayout>